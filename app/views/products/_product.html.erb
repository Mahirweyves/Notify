<div class="container-fluid pb-5">
  <div>
    <div class="border col-md-8 pr-0">

  <div class="card-image mb-5 pb-5 pl-3">
    <figure class="image is-square">
      <div style="width:400px; height:80px">
      <%=link_to image_tag(product.images.first.variant(resize: "250x210!>")), product %>
      </div>
    </figure>
    
  </div>
  <div class="card-content">
    <h4 class="pt1 title is-5 pt-3 text-center"><%=link_to product.name, product, class: "text-warning"%></h4>
    <p class="pv1 has text-white ml-5"><%= truncate(product.description, length: 30) %></p>
    
    <div class="media pt3">
      <div class="media-left pt3"> </div>
      <div class="media-content">
        <!--<strong><p class="has-text-weight-bold ml-4 mb0 has text-warning lead">Posted by: <%= product.company_name %></p></strong>-->
        <strong><p class="has-text-weight-bold ml-4 mb0 has text-warning">price: <%= product.price %></p></strong>
       <strong><p class="is-italic mb0 has text-primary mr-md-auto"><time>posted <%= time_ago_in_words(product.created_at) %> ago</time></p></strong>
       </div>
      </div>
    </div>
  </div>
</div>
</div>